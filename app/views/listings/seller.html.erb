<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image_url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %><br></p>
            <% if listing.user.present? %>
            <p><%= "Sold by #{listing.user.name}" %></p>
            <% end %>
            <% if (user_signed_in?) && (current_user == listing.user) %>
              <%= link_to 'Edit', edit_listing_path(listing), class: 'btn btn-link' %>
              <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-link' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<br>
<% if (user_signed_in?) %>
  <%= link_to 'New Listing', new_listing_path, class: 'btn btn-link' %>
<% end %>
